{
  "name": "glimmarnote",
  "version": "1.0.0",
  "description": "Floating Notepad Widget",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.glimmarnote.app",
    "productName": "GlimmarNote",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "vite": "^6.4.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sass": "^1.97.3"
  }
}
